{
    "name": "topphp/topphp-nuonuo-invoice",
    "type": "library",
    "description": "诺诺发票",
    "license": "MIT",
    "authors": [
        {
            "name": "topphp",
            "email": "sleep@kaituocn.com",
            "homepage": "https://github.com/topphp",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "~7.2",
        "ext-curl": "*",
        "ext-json": "*"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.5",
        "topphp/topphp-testing": "^1.0.0"
    },
    "autoload": {
        "psr-4": {
            "Topphp\\TopphpNuonuoInvoice\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Topphp\\Test\\": "tests"
        }
    },
    "scripts": {
        "test": "./vendor/bin/phpunit -c ./phpunit.xml.dist",
        "check-style": "phpcs src tests",
        "fix-style": "phpcbf src tests"
    },
    "extra": {
        "think": {
            "services": [],
            "config": []
        }
    },
    "config": {
        "sort-packages": true
    },
    "repositories": {
        "packagist": {
            "type": "composer",
            "url": "https://mirrors.aliyun.com/composer"
        }
    }
}
